####################################################################################################

/interface vlan add interface=ether2 name=pppoe vlan-id=1036 disabled=no
/interface pppoe-client  add name=pppoe-wrt user=vodafonedsl password=vodafonedsl interface=pppoe 
/interface pppoe-client  set pppoe-wrt use-peer-dns=yes
/interface pppoe-client  set pppoe-wrt add-default-route=yes
/interface pppoe-client  set pppoe-wrt dial-on-demand=no
/interface pppoe-client  set pppoe-wrt profile=default-encryption
/interface pppoe-client  set pppoe-wrt disabled=no
/interface pppoe-client  set pppoe-wrt max-mtu=1492
/ip firewall nat add chain=srcnat out-interface=pppoe-wrt action=masquerade

####################################################################################################























/system identity set name=user

/interface wireless security-profiles
add name=sice-key unicast-ciphers=tkip group-ciphers=tkip authentication-types=wpa2-psk wpa2-pre-shared-key=12345678 mode=dynamic-keys group-key-update=5m


/interface vlan add interface=ether2 name=pppoe vlan-id=1036 disabled=no

/interface wireless set wlan1 ssid=12345-WRT mode=station security-profile=aaa radio-name=12345 country=italy tx-power-mode=default disabled=no

#Rete LAN e DCHP SERVER#

/ip address add address=192.168.251.1/24 interface=ether1

/ip dhcp-server network add address=192.168.1.0/24 gateway=192.168.1.1 dns-server=151.99.125.2 netmask=255.255.255.0
/ip pooladd name=ip_lan ranges=192.168.1.100-192.168.1.200
/ip dhcp-server add disabled=no name=dhcp_server address-pool=ip_lan interface=ether1

/ip service
set ftp disabled=no
set winbox disabled=no
set www disabled=no

# Interfaccia ppoe #
/interface pppoe-client
add name=pppoe-wrt user=123456@wrt password=123456 interface=wdata
set pppoe-wrt use-peer-dns=yes
set pppoe-wrt add-default-route=yes
set pppoe-wrt dial-on-demand=no
set pppoe-wrt profile=default-encryption
set pppoe-wrt disabled=no
set pppoe-wrt max-mtu=1492

# Firewall #


/ip firewall nat
add chain=srcnat out-interface=pppoe-wrt action=masquerade

/ip firewall address-list
#add list=mngt address=aa.bb.cc.dd/aa
#add list=mngt address=aa.bb.cc.dd/bb

#/ip firewall filter
#add chain=input action=accept dst-port=22,23 protocol=tcp src-address-list=mngt
#add chain=input action=drop dst-port=22,23 protocol=tcp

# DNS
/ip dns
set allow-remote-requests=yes


/system clock
set time-zone-name=Europe/Rome

/system ntp client
set enabled=yes mode=unicast primary-ntp=62.94.7.57 secondary-ntp=62.94.7.9

#banda garantita per voip con dscp 40#

/ip firewall mangle
add chain=prerouting dscp=40 action=mark-packet new-packet-mark=voip

# QUEUE #

/queue type
set ethernet-default pfifo-limit=100

/queue simple
add name=upload-limit
set upload-limit target-addresses=192.168.1.0/24
set upload-limit interface=ether1
set upload-limit direction=both
set upload-limit max-limit=512000
set upload-limit queue=ethernet-default/ethernet-default
add name=voip
set voip max-limit=128000/128000
set voip packet-marks=voip
set voip limit-at=128000/128000

/ip upnp
set allow-disable-external-interface=no
set enabled=yes
set show-dummy-rule=yes

/ip upnp interfaces
add interface=ether1 type=internal disabled=no
add interface=pppoe-wrt type=external disabled=no

